<h1>New Hike</h1>

<form>
  <div class="form-group">
    <label for="title">Name of the Hike</label>
    {{input id="title" class="form-control" value=title}}
  </div>

  <div class="form-group">
    <label for="author">Name of person posting the hike</label>
    {{textarea id="author" class="form-control" value=author}}
  </div>

  <div class="form-group">
    <label for="rating">How would you rate the hike from 1 to 5:</label>
    {{textarea id="rating" type='number' class="form-control" min="1" max="5" value=rating}}
  </div>

  <div class="form-group">
    <label for="location">Location of the hike: </label>
    {{textarea id="location" class="form-control" value=location}}
  </div>

  <div class="form-group">
    <label for="difficulty">Difficulty of the hike from 1 to 10: </label>
    {{textarea id="difficulty" type='number' class="form-control" min="1" max="10" value=difficulty}}
  </div>

  <div class="form-group">
    <label for="body">Any other details</label>
    {{textarea id="body" class="form-control" rows="15" value=body}}
  </div>

  <div class="form-group">
    <label for="latitude">Latitude</label>
    {{textarea id="latitude" class="form-control" value=latitude}}
  </div>

  <div class="form-group">
    <label for="longitude">Longitude</label>
    {{textarea id="longitude" class="form-control" value=longitude}}
  </div>

  <button class="btn btn-primary" {{action 'save'}}>Save</button>

</form>
