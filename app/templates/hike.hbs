<h1>Hike Details</h1>

<div class="hike-details">

  <h2>Name of the Hike: {{model.title}}</h2>
  <h3 class='muted'>Submitted by: {{model.author}}</h3>
  <hr>
  <p>
    This hike was rated out of 5 as a: {{model.rating}}<br>
    Location: {{model.location}}<br>
    Level of difficulty from 1 to 10: {{model.difficulty}} <br>
    More information about the hike:  {{model.body}}
  </p>

<hr>
<div id="map">
  <h2 id="title">Location</h2>
  {{google-map latitude="34.851939" longitude="-82.399752"}}
</div>
<br>
</div>

{{#if isEditing}}
<form>
  <div class="form-group">
    <label for="title">Name of the Hike</label>
    {{input id="title" class="form-control" value=title}}
  </div>

  <div class="form-group">
    <label for="author">Name of person posting the hike</label>
    {{textarea id="author" class="form-control" value=author}}
  </div>

  <div class="form-group">
    <label for="rating">How would you rate the hike from 1 to 5:</label>
    {{textarea id="rating" type='number' class="form-control" min="1" max="5" value=rating}}
  </div>

  <div class="form-group">
    <label for="location">Location of the hike:</label>
    {{textarea id="location" class="form-control" value=location}}
  </div>

  <div class="form-group">
    <label for="difficulty">Difficulty of the hike from 1 to 10:</label>
    {{textarea id="difficulty" type='number' class="form-control" min="1" max="10" value=difficulty}}
  </div>

  <div class="form-group">
    <label for="body">Any other details</label>
    {{textarea id="body" class="form-control" rows="15" value=body}}
  </div>

  <button class="btn btn-primary" {{action 'save'}}>Save</button>

</form><button {{action 'doneEditing'}}>Done</button>
{{else}}
<button class="btn btn-primary" {{action 'edit'}}>Edit</button>
<button class="btn btn-primary" {{action 'delete'}}>Delete</button>
{{/if}}

<hr>

<div id="commentSection">
  <h3>All Comments</h3>
  {{#each comment in model.comments}}
  <li>
    {{#link-to 'comment' comment.id}}
      {{comment.title}}<span class='muted'> by {{comment.author}}</span>
    {{/link-to}}

  </li>
  {{/each}}
  {{#link-to 'comments' classNames="btn btn-primary"}}Add a Comment{{/link-to}}
  {{outlet}}
</div>
