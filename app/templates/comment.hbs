<div id="individualComment">
  {{model.title}}
  {{model.author}}
  {{model.answer}}

</div>

{{#if isEditing}}
<form>

  <div class="form-group">
    <label for="author">Answered By:</label>
    {{input id="author" class="form-control" value=author}}
  </div>

  <div class="form-group">
    <label for="title">Short description of the hike:</label>
    {{textarea id="title" class="form-control" value=title}}
  </div>

  <div class="form-group">
    <label for="answer">Description about the hike:</label>
    {{textarea id="answer" class="form-control" value=answer rows="10"}}
  </div>

  <button class="btn btn-primary" {{action 'save'}}>Save</button>

</form><button class="btn btn-primary" {{action 'doneEditing'}}>Done</button>
{{else}}
<button class="btn btn-primary" {{action 'edit'}}>Edit</button>
<button class="btn btn-danger" {{action 'delete'}}>Delete</button>
{{/if}}
